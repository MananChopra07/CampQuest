<% layout('layout/boiler') %>
    <h1> All Campgrounds</h1>
    <a href = '/campquests/new'>add new campground</a>

   <% for(let campquest of campquests){ %>
       <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class = "img-fluid" src="<%= campquest.image %>" alt="">
            </div>
            <div class = "col-md-8">
                <div class = "card-body">
                    <h5 class = "card-title"><%= campquest.title %> </h5>
                    <p class = "card-discription"><%= campquest.description %> </p>
                    <p class = "card-text">
                        <small class = "text-muted"> <%= campquest.location %> </small>
                    </p>
                    <a class = "btn btn-primary" href = "/campquests/<%=campquest._id %>">View <%= campquest.title %> </a>

                </div>
            </div>
        </div>
       </div>
       <% } %>


